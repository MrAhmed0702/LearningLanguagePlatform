@model LearningLanguagePlatform.Models.User

@{
    ViewData["Title"] = "EditUser";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
@if (Model is null)
{
    <p>No User was found with this Id</p>
}
else
{
    <h1 style="text-align:center;">Edit User Form</h1>
    <form asp-action="EditUser" method="post">
        <div class="mb-4 d-flex justify-content-center">
            <input asp-for="Id" class="form-control mb-2" style="width: 348px;" placeholder="Id" readonly />
        </div>

        <div class="mb-4 d-flex justify-content-center">
            <input asp-for="Name" class="form-control mb-2" style="width: 348px;" placeholder="Enter Your Name">
        </div>

        <div class="mb-4 d-flex justify-content-center">
            <select asp-for="SelectedLanguage" class="form-control mb-2" style="width: 348px;">
                <option value="">Select Your Language</option>
                <option value="english">English</option>
                <option value="spanish">Spanish</option>
                <option value="french">French</option>
                <option value="arabic">Arabic</option>
                <option value="chinese">Chinese</option>
                <option value="russian">Russian</option>
                <option value="japanese">Japanese</option>
                <option value="italian">Italian</option>
                <option value="korean">Korean</option>
            </select>
        </div>

        <div class="mb-4 d-flex justify-content-center">
            <input asp-for="Email" class="form-control mb-2" style="width: 348px;" placeholder="Enter Your Email">
        </div>
        <div class="mb-4 d-flex justify-content-center">
            <button type="submit" class="btn btn-lg btn-block" style="background-color: #EEE9FB; color: #5125D2; width: 348px;">Save</button>
        </div>

    </form>
}