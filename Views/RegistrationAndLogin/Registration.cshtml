@model LearningLanguagePlatform.Models.User
@{
    ViewData["Title"] = "Registration";
    Layout = null;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

<div class="container">
    <div class="text-center mb-4 mt-5">
        <img src="~/images/Logo.png" alt="Logo" width="99" height="74">
    </div>
    <div class="text-center mb-4">
        <h1 class="fw-bold">Sign Up!</h1>
    </div>
    <div class="text-center mb-4">
        <h2 class="fw-bold" style="color: #88889D;">A platform for language learners</h2>
        <h2 class="fw-bold" style="color: #88889D;">Join and kickstart your learning</h2>
    </div>
    <form asp-action="Register" method="post">
        <div class="mb-4 d-flex justify-content-center">
            <input asp-for="Name" class="form-control mb-2" style="width: 348px;" placeholder="Enter Your Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-4 d-flex justify-content-center">
            <input asp-for="Email" class="form-control mb-2" style="width: 348px;" placeholder="Enter Your Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-4 d-flex justify-content-center">
            <input asp-for="Password" class="form-control mb-2" style="width: 348px;" placeholder="Enter Your Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mb-4 d-flex justify-content-center">
            <button type="submit" class="btn btn-lg btn-block" style="background-color: #EEE9FB; color: #5125D2; width: 348px;">Sign Up</button>
        </div>
    </form>
    <div class="text-center">
        <p style="color: black;">Already have an account ? <a style="text-decoration: underline; color: black;" asp-controller="RegistrationAndLogin" asp-action="Login">Login</a></p>
    </div>
    <div class="text-center mb-4">
        <p style="color: #88889D;">By joining I declare that I have read and accept the</p>
        <p style="color: #88889D;"><a href="#" style="text-decoration: underline; color: #88889D;">Terms of Service</a> and <a href="#" style="text-decoration: underline; color: #88889D;">Privacy Policy</a></p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
