@{
    Layout = null;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<div class="container" style="background: white;">
    <div class="text-center mb-4 mt-5">
        <img src="~/images/Logo.png" alt="Logo" width="99" height="74">
    </div>
    <div class="text-center mb-4">
        <h1 class="fw-bold">Sign Up!</h1>
    </div>
    <div class="text-center mb-4">
        <h2 class="fw-bold" style="color: #88889D;">A platform for language learners</h2>
        <h2 class="fw-bold" style="color: #88889D;">Join and kickstart your learning</h2>
    </div>
    <div class="mb-4 d-flex justify-content-center">
        <input type="text" class="form-control mb-2" style="width: 348px;" placeholder="Enter Your Name">
    </div>
    <div class="mb-4 d-flex justify-content-center">
        <input type="text" class="form-control mb-2" style="width: 348px;" placeholder="Enter Your Email">
    </div>
    <div class="mb-4 d-flex justify-content-center">
        <input type="password" class="form-control mb-2" style="width: 348px;" placeholder="Enter Your Password">
    </div>
    <div class="mb-4 d-flex justify-content-center">
        <button class="btn btn-lg btn-block" style="background-color: #EEE9FB; color: #5125D2; width: 348px;">Sign Up</button>
    </div>
    <div class="text-center">
        <p style="color: black;">Already have an account ? <a style="text-decoration: underline; color: black;" asp-controller="RegistrationAndLogin" asp-action="Login">Login</a></p>
    </div>
    <div class="text-center mb-4">
        <p style="color: #88889D;">By joining I declare that I have read and accept the</p>
        <p style="color: #88889D;"><a href="#" style="text-decoration: underline; color: #88889D;">Terms of Service</a> and <a href="#" style="text-decoration: underline; color: #88889D;">Privacy Policy</a></p>
    </div>
</div>

